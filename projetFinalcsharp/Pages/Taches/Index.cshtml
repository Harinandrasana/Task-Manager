@page
@model projetFinalcsharp.Pages.Taches.IndexModel
@{
}

<br />
<h2>Liste des Taches</h2>
<div class="d-flex justify-content-between">
    <a class="btn btn-warning btn-sm col-sm-1" href="/Taches/Create" style="width: 100px"><i class="fa-duotone fa-plus text-white text-md" style="font-size: 30px;"></i></a>
    <div class="navbar navbar-expand-sm ml-auto">
        <label for="idE">Entrer l'identifiant de l'employé: <span></span></label>
        <form method="post" enctype="multipart/form-data" id="idE" class="d-flex" asp-page-handler="Search">
            <input type="text" name="idEmployer" id="recherche">
            <input class="btn btn-success fa-solid fa-magnifying-glass" type="submit" value="Rechercher">
        </form>
    </div>
</div>
<table class="table table-hover text-center">
    <thead>
        <tr>
            <th>ID</th>
            <th>Employe</th>
            <th>Description</th>
            <th>DateDebut</th>
            <th>DateFin</th>
            <th>Statut</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listTaches)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.employeId</td>
                <td>@item.description</td>
                <td>@item.dateDebut</td>
                <td>@item.dateFin</td>
                <td>@item.statut</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Taches/Edit?id=@item.id"><i class="fa-solid fa-pencil text-white"></i></a>
                    <a class="btn btn-danger btn-sm" href="/Taches/Delete?id=@item.id"><i class="fa-solid fa-trash text-white"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
